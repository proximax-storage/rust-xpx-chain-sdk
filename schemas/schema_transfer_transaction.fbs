namespace Sirius.Buffers;

table MessageBuffer {
    type: ubyte;
    payload: [ubyte];
}

table MosaicBuffer {
    id: [uint];
    amount: [uint];
}

table TransferTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    max_fee: [uint];
    deadline:[uint];
    recipient: [ubyte];
    message_size: ushort;
    num_mosaics: ubyte;
    message: MessageBuffer;
    mosaics: [MosaicBuffer];
}

root_type TransferTransactionBuffer;
